<link rel="stylesheet" href="{{ 'tempusdominus-bootstrap-4.min.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'owl.carousel.min.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'style.css' | asset_url }}" media="print" onload="this.media='all'">
 <div class="container-fluid p-0">
        <div id="header-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="{{ section.settings.img1 | img_url:'750x' }}" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h4 class="text-white text-uppercase mb-md-3">Tours & Travel</h4>
                            <h1 class="display-3 text-white mb-md-4">Let's Discover The World Together</h1>
                            <a href="" class="btn btn-primary py-md-3 px-md-5 mt-2">Book Now</a>
                        </div>
                    </div>
                </div>
              {%- for block in section.blocks -%}
             <div class="carousel-item">
                    <img class="w-100" src="{{ block.settings.imgid | img_url: '1536x' }}" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h4 class="text-white text-uppercase mb-md-3">Tours & Travel</h4>
                            <h1 class="display-3 text-white mb-md-4">Discover Amazing Places With Us</h1>
                            <a href="" class="btn btn-primary py-md-3 px-md-5 mt-2">Book Now</a>
                        </div>
                    </div>
                </div>
          {%- endfor -%}
              
            </div>
            <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
                <div class="btn btn-dark" style="width: 45px; height: 45px;">
                    <span class="carousel-control-prev-icon mb-n2"></span>
                </div>
            </a>
            <a class="carousel-control-next" href="#header-carousel" data-slide="next">
                <div class="btn btn-dark" style="width: 45px; height: 45px;">
                    <span class="carousel-control-next-icon mb-n2"></span>
                </div>
            </a>
        </div>
 </div>
{% schema %}
    {
      "name": "travel carrusel",
      
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Titulo de la sección",
          "default": "Información importante"
        },
        {
          "type": "color",
          "id": "background-color",
          "label": "fondo del contenedor",
          "default":"#000000"
        },
         {
          "type": "image_picker",
          "id": "img1",
          "label": "imagen del contenedor"
          
        }
      ],
      "blocks": [
        
        {
          "type": "text_block",
          "name": "configuracion",
          "settings": [
             {
          "type": "image_picker",
          "id": "imgid",
          "label": "imagen del contenedor"
          
        }
           
          ]
        }
        
      ],
      "presets": [
        {
          "name": "travel carrusel",
          "category": "Custom content",
          "blocks": [
           
           
            
          ]
        }
      ]
    }
    {% endschema %}
    
